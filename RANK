#include <stdio.h>

int main()
{
	
	int a[4]  = {3,5,7,8,};
	
	
	printf("a");
	for(int k =3; k>0;k-- )
	{
	
		for (int i=4;i>0;i--)
		{
			if(a[i]>a[i-1])
			{
				int	t = a[i];
				
				a[i] = a[i-1];
				
				a[i-1]= t;
				
				
				//TODO
			}
						
		}
	
	
		
		
		
	 	
		
		
		
		
		
	}
		//在for语句的外面还有一个for语句，多次执行后就排序好了，不行看下面

	
	printf("\n%d",a[0]);
	printf("\n%d",a[1]);
	printf("\n%d",a[2]);
	printf("\n%d",a[3]);
	
	
	
	return 0;
}
